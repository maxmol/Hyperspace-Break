<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="maxmol.igp.MainMenu">

    <maxmol.igp.StarsBackground
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="12pt"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:id="@+id/mainmenu_appname"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mainmenu_bottomlayout"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:padding="12sp"
            android:textColor="@android:color/white"
            android:id="@+id/mainmenu_money"
            android:text=""/>
        <Button
            android:layout_width="wrap_content"
            android:padding="10sp"
            android:layout_height="wrap_content"
            android:text="Reset Progress"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/white"
            android:id="@+id/mainmenu_resetprogress"
            android:background="@color/colorAccent"/>
    </LinearLayout>

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_below="@id/mainmenu_appname"
        android:layout_above="@id/mainmenu_bottomlayout"
        android:id="@+id/mainmenu_abovelayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Play"
            android:id="@+id/mainmenu_newgame"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Level"
            android:id="@+id/mainmenu_continue"/>
    </LinearLayout>
</RelativeLayout>